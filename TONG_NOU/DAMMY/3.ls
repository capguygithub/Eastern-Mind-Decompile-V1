on startMovie  checkQT  setMonitorColor  set the centerStage to true  set the exitlock to true  if the machineType = 256 then    play movie "@\Tong_Nou\d_Logo"  else    play movie "TongNou:TongNou:d_Logo.dir"  end ifend startMovieon setMonitorColor  if colorQD() then    global gfirstDepth    put the colorDepth into gFirstDepth    set the colorDepth to 8  else    alert the text of cast "MonitorAlert"    quit  end ifend setMonitorColoron checkQT  if not the quickTimePresent then    alert the text of cast "QTAlert"    quit  end ifend checkQT